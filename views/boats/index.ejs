<% include ../partials/nav %>
<div class="container top" id="index">
  <div class="row col-xs-12 col-sm-10 col-sm-offset-1">
    <ul class="boat-list">
      <% boats.forEach(function(boat) { %>
        <li>
          <div class="row col-xs-12 col-sm-6 col-md-4 thumb">
            <div class="container-img">
              <a href="/boats/<%= boat.id %>" class="thumbnail">
                <img class="img-responsive" src="<%= boat.showPhoto() %>" />
              </a>
            </div>
            <div class="container-info">
              <h5><%= boat.name     %></h5>
              <h6>Capacity:   <%= boat.capacity %></h6>
            </div>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>
</div>
