<% include ../partials/nav %>
<div class="container">
  <div class="row">

    <h1>Edit Boat Details</h1>

    <form method="post" action="/boats/<%= boat.id %>?_method=PUT">
      <div class="form-group">
        <input name="boat[name]" type="text" placeholder="Name" class="form-control" value="<%= boat.name %>">
      </div>
      <div class="form-group">
        <input name="boat[type]" type="text" placeholder="Type" class="form-control" value="<%= boat.type %>">
      </div>
      <div class="form-group">
        <input name="boat[make]" type="text" placeholder="Make" class="form-control" value="<%= boat.make %>">
      </div>
      <div class="form-group">
        <input name="boat[length]" type="text" placeholder="Length" class="form-control" value="<%= boat.length %>">
      </div>
      <div class="form-group">
        <input name="boat[capacity]" type="text" placeholder="Capacity" class="form-control" value="<%= boat.capacity %>">
      </div>
      <div class="form-group">
        <input name="boat[year]" type="text" placeholder="Year" class="form-control" value="<%= boat.year %>">
      </div>
      <div class="form-group">
        <input name="boat[photoUrl]" type="text" placeholder="Photo URL" class="form-control" value="<%= boat.photoUrl %>">
      </div>
      <button type="submit" class="btn btn-info">Submit</button>
    </form>

  </div>
</div>
